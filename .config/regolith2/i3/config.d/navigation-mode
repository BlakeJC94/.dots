# TODO override the files `40_workspace-config` and `30_navigation`
## Navigate // Enter Leader Mode // <> + z ##
mode "Leader Mode" {

        ## Navigate // Relative Window // ↑ ↓ ← → ##
        bindsym Left focus left ; mode "default"
        bindsym Down focus down ; mode "default"
        bindsym Up focus up ; mode "default"
        bindsym Right focus right ; mode "default"
        ## Navigate // Relative Window // k j h l ##
        bindsym h focus left ; mode "default"
        bindsym j focus down ; mode "default"
        bindsym k focus up ; mode "default"
        bindsym l focus right ; mode "default"


        ## Move // Relative Window // Shift + ↑ ↓ ← → ##
        bindsym Shift+Left move left ; mode "default"
        bindsym Shift+Down move down ; mode "default"
        bindsym Shift+Up move up ; mode "default"
        bindsym Shift+Right move right ; mode "default"
        ## Move // Relative Window // Shift + k j h l ##
        bindsym Shift+h move left ; mode "default"
        bindsym Shift+j move down ; mode "default"
        bindsym Shift+k move up ; mode "default"
        bindsym Shift+l move right ; mode "default"

        # Move workspace to monitors
        bindsym Ctrl+h move workspace to output left ; mode "default"
        bindsym Ctrl+j move workspace to output down ; mode "default"
        bindsym Ctrl+k move workspace to output up ; mode "default"
        bindsym Ctrl+l move workspace to output right ; mode "default"
        bindsym Ctrl+Left move workspace to output left ; mode "default"
        bindsym Ctrl+Down move workspace to output down ; mode "default"
        bindsym Ctrl+Up move workspace to output up ; mode "default"
        bindsym Ctrl+Right move workspace to output right ; mode "default"


        ## Resize // Resize Window // Alt + ↑ ↓ ← → ##
        bindsym $alt+h resize shrink width 6 px or 6 ppt
        bindsym $alt+j resize grow height 6 px or 6 ppt
        bindsym $alt+k resize shrink height 6 px or 6 ppt
        bindsym $alt+l resize grow width 6 px or 6 ppt
        ## Resize // Resize Window // Alt + k j h l ##
        bindsym $alt+Left resize shrink width 6 px or 6 ppt
        bindsym $alt+Down resize grow height 6 px or 6 ppt
        bindsym $alt+Up resize shrink height 6 px or 6 ppt
        bindsym $alt+Right resize grow width 6 px or 6 ppt

        bindsym $mod+h workspace number $ws1 ; mode "default"
        bindsym $mod+j workspace number $ws2 ; mode "default"
        bindsym $mod+k workspace number $ws3 ; mode "default"
        bindsym $mod+l workspace number $ws4 ; mode "default"
        bindsym $mod+semicolon workspace number $ws5 ; mode "default"
        bindsym $mod+comma workspace number $ws6 ; mode "default"
        bindsym $mod+period workspace number $ws7 ; mode "default"

        # Navigate // Workspaces 1-10 // 0..9 ##
        bindsym $ws1_key workspace number $ws1 ; mode "default"
        bindsym $ws2_key workspace number $ws2 ; mode "default"
        bindsym $ws3_key workspace number $ws3 ; mode "default"
        bindsym $ws4_key workspace number $ws4 ; mode "default"
        bindsym $ws5_key workspace number $ws5 ; mode "default"
        bindsym $ws6_key workspace number $ws6 ; mode "default"
        bindsym $ws7_key workspace number $ws7 ; mode "default"
        bindsym $ws8_key workspace number $ws8 ; mode "default"
        bindsym $ws9_key workspace number $ws9 ; mode "default"
        bindsym $ws10_key workspace number $ws10 ; mode "default"

        # Move // Workspaces 1-10 // Shift + 0..9 ##
        bindsym Shift+$ws1_key move container to workspace number $ws1 ; mode "default"
        bindsym Shift+$ws2_key move container to workspace number $ws2 ; mode "default"
        bindsym Shift+$ws3_key move container to workspace number $ws3 ; mode "default"
        bindsym Shift+$ws4_key move container to workspace number $ws4 ; mode "default"
        bindsym Shift+$ws5_key move container to workspace number $ws5 ; mode "default"
        bindsym Shift+$ws6_key move container to workspace number $ws6 ; mode "default"
        bindsym Shift+$ws7_key move container to workspace number $ws7 ; mode "default"
        bindsym Shift+$ws8_key move container to workspace number $ws8 ; mode "default"
        bindsym Shift+$ws9_key move container to workspace number $ws9 ; mode "default"
        bindsym Shift+$ws10_key move container to workspace number $ws10 ; mode "default"


        ## Navigate // Next Workspace on Output // Tab ##
        bindsym period workspace next_on_output ; mode "default"
        ## Navigate // Previous Workspace on Output // Shift + Tab ##
        bindsym comma workspace prev_on_output ; mode "default"

        ## Navigate // Next Workspace // Alt + Tab ##
        bindsym Shift+period workspace next ; mode "default"
        ## Navigate // Previous Workspace // Alt + Shift + Tab ##
        bindsym Shift+comma workspace prev ; mode "default"


        # Space: Fullscreen Toggle
        bindsym space fullscreen toggle ; mode "default"

        # r: Refresh config
        bindsym r reload ; mode "default"

        # Backspace: find window
        bindsym BackSpace exec --no-startup-id $i3-wm.program.launcher.window -t $ilia.stylesheet ; mode "default"

        # Enter: toggle layout
        bindsym Return layout toggle tabbed splith splitv ; mode "default"

        # Tab: toggle float
        bindsym Tab focus mode_toggle ; mode "default"

        # q: kill
        bindsym q kill ; mode "default"

        # ## Leader // Exit Leader Mode // Escape or Enter ##
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+z mode "default"
}
bindsym $mod+z mode "Leader Mode"
