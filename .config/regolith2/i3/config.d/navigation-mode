# TODO override the files `40_workspace-config` and `30_navigation`
# ## Navigate // Enter Leader Mode // <> Ctrl + z ##
mode "Leader Mode" {
        # ## Navigate // Relative Window // ↑ ↓ ← → ##
        bindsym Left focus left ; mode "default"
        bindsym Down focus down ; mode "default"
        bindsym Up focus up ; mode "default"
        bindsym Right focus right ; mode "default"

        # Move windows
        bindsym Shift+Left move left ; mode "default"
        bindsym Shift+Down move down ; mode "default"
        bindsym Shift+Up move up ; mode "default"
        bindsym Shift+Right move right ; mode "default"

        # Navigate to workspace
        bindsym $ws1_key workspace number $ws1 ; mode "default"
        bindsym $ws2_key workspace number $ws2 ; mode "default"
        bindsym $ws3_key workspace number $ws3 ; mode "default"
        bindsym $ws4_key workspace number $ws4 ; mode "default"
        bindsym $ws5_key workspace number $ws5 ; mode "default"
        bindsym $ws6_key workspace number $ws6 ; mode "default"
        bindsym $ws7_key workspace number $ws7 ; mode "default"
        bindsym $ws8_key workspace number $ws8 ; mode "default"
        bindsym $ws9_key workspace number $ws9 ; mode "default"
        bindsym $ws10_key workspace number $ws10 ; mode "default"

        # Move to workspace
        bindsym $ws1_key move container to workspace number $ws1 ; mode "default"
        bindsym $ws2_key move container to workspace number $ws2 ; mode "default"
        bindsym $ws3_key move container to workspace number $ws3 ; mode "default"
        bindsym $ws4_key move container to workspace number $ws4 ; mode "default"
        bindsym $ws5_key move container to workspace number $ws5 ; mode "default"
        bindsym $ws6_key move container to workspace number $ws6 ; mode "default"
        bindsym $ws7_key move container to workspace number $ws7 ; mode "default"
        bindsym $ws8_key move container to workspace number $ws8 ; mode "default"
        bindsym $ws9_key move container to workspace number $ws9 ; mode "default"
        bindsym $ws10_key move container to workspace number $ws10 ; mode "default"

        # Move workspace to monitors
        # bindsym < move workspace to output left ; mode "default"
        # bindsym ... move workspace to output down ; mode "default"
        # bindsym ... move workspace to output up ; mode "default"
        # bindsym > move workspace to output right ; mode "default"

        # Fullscreen Toggle
        # bindsym Space fullscreen toggle ; mode "default"

        # ## Resize // Resize Window // ↑ ↓ ← → ##
        # bindsym Left resize shrink width 6 px or 6 ppt
        # bindsym Down resize grow height 6 px or 6 ppt
        # bindsym Up resize shrink height 6 px or 6 ppt
        # bindsym Right resize grow width 6 px or 6 ppt

        # bindsym Shift+Left resize shrink width 12 px or 12 ppt
        # bindsym Shift+Down resize grow height 12 px or 12 ppt
        # bindsym Shift+Up resize shrink height 12 px or 12 ppt
        # bindsym Shift+Right resize grow width 12 px or 12 ppt

        # ## Resize // Resize Window // k j h l ##
        # bindsym $i3-wm.binding.left resize shrink width 6 px or 6 ppt
        # bindsym $i3-wm.binding.up resize grow height 6 px or 6 ppt
        # bindsym $i3-wm.binding.down resize shrink height 6 px or 6 ppt
        # bindsym $i3-wm.binding.right resize grow width 6 px or 6 ppt

        # bindsym $i3-wm.binding.move_left resize shrink width 12 px or 12 ppt
        # bindsym $i3-wm.binding.move_up resize grow height 12 px or 12 ppt
        # bindsym $i3-wm.binding.move_down resize shrink height 12 px or 12 ppt
        # bindsym $i3-wm.binding.move_right resize grow width 12 px or 12 ppt

        # ## Resize // Exit Resize Mode // Escape or Enter ##
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+x mode "default"
}
bindsym $mod+Ctrl+z mode "Leader Mode"
